{
  "extends": "@tsconfig/esm/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "paths": {
      "raula": ["./src/index.ts"]
    }
  },
  "exclude": ["node_modules"]
}
